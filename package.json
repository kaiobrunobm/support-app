{
  "name": "support-app",
  "private": true,
  "version": "0.0.0",
  "description": "Monorepo for Electron Agent, UI App, and Backend API for system monitoring",
  "author": "Kaio Bruno <bmkaiobruno@gmail.com>",
  "license": "MIT",
  "workspaces": [
    "agent",
    "ui-app",
    "backend",
    "packages/*"
  ],
  "scripts": {
    "dev:agent": "yarn workspace agent dev",
    "dev:ui": "yarn workspace ui-app dev",
    "dev:backend": "yarn workspace backend dev",
    "db:migrate": "yarn workspace backend prisma migrate dev",
    "db:generate": "yarn workspace backend prisma generate",
    "db:prisma-studio": "yarn workspace backend prisma studio",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "docker": "docker compose -f ./docker/docker-compose.yml up -d",
    "build:agent": "yarn workspace agent build",
    "build:ui": "yarn workspace ui-app build",
    "build:backend": "yarn workspace backend build",
    "start:agent": "yarn workspace agent start",
    "start:ui": "yarn workspace ui-app start",
    "start:backend": "yarn workspace backend start"
  },
  "devDependencies": {
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.2.0",
    "prettier": "^3.3.2",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=20.0.0",
    "yarn": ">=1.22.0"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "cors": "^2.8.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
