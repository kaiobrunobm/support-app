generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SystemInfo {
  id        String   @id @default(uuid())
  platform  String
  distro    String
  release   String
  build     String?
  kernel    String
  arch      String
  domain    String
  uptime    String
  createdAt DateTime @default(now())

  users      User[]
  hardware   Hardware  @relation(fields: [hardwareId], references: [id])
  hardwareId String
  network    Network   @relation(fields: [networkId], references: [id])
  networkId  String
  disks      Disk[]
  printers   Printer[]
}

model User {
  id        String     @id @default(uuid())
  user      String
  loginDate DateTime
  loginTime String
  system    SystemInfo @relation(fields: [systemId], references: [id])
  systemId  String
}

model Hardware {
  id         String       @id @default(uuid())
  cpu        CPU          @relation(fields: [cpuId], references: [id])
  cpuId      String
  memory     Memory[]
  SystemInfo SystemInfo[]
}

model CPU {
  id           String     @id @default(uuid())
  manufacturer String
  model        String
  cores        Int
  speed        Float
  socket       String?
  Hardware     Hardware[]
}

model Memory {
  id         String   @id @default(uuid())
  size       Float // in GB
  type       String?
  clockSpeed Int
  hardware   Hardware @relation(fields: [hardwareId], references: [id])
  hardwareId String
}

model Network {
  id         String       @id @default(uuid())
  publicIP   String
  adapters   Adapter[]
  SystemInfo SystemInfo[]
}

model Adapter {
  id        String  @id @default(uuid())
  name      String
  ip        String
  mask      String
  mac       String
  type      String
  speed     String
  network   Network @relation(fields: [networkId], references: [id])
  networkId String
}

model Disk {
  id           String     @id @default(uuid())
  device       String
  type         String
  name         String
  vendor       String
  serialNumber String
  size         Float // in GB
  system       SystemInfo @relation(fields: [systemId], references: [id])
  systemId     String
}

model Printer {
  id       String     @id @default(uuid())
  name     String
  port     String?
  ip       String?
  system   SystemInfo @relation(fields: [systemId], references: [id])
  systemId String
}
